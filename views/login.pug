extends layouts/main

block content
    .form-container
        form(method="post")
            input(type="email", name="email", placeholder="이메일")
            input(type="password", name="password", placeholder="비밀번호")
            if error
                .errorMsg 이메일 또는 비밀번호를 확인해 주세요.
            input(type="submit", value="로그인")