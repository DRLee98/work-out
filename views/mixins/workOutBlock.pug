mixin workOutBlock(workOut = {})
    li.workOut(id=workOut.id)
        span.workOut-name=workOut.name
        span.workOut-weight #{workOut.weight > 1 ? `${workOut.weight}kg` : ""}
        if workOut.repsOrHold === "reps"
            span.workOut-count #{workOut.count}개
        else
            span.workOut-count #{workOut.count}초
        button.workOut-set(value=workOut.set) #{workOut.set}세트
        button.workOut-breakTime(value=workOut.breakTime) #{workOut.breakTime / 60 >= 1 ? `${Math.floor(workOut.breakTime / 60)} : ${workOut.breakTime % 60 < 10 ? `0${workOut.breakTime % 60}` : workOut.breakTime % 60}` : workOut.breakTime % 60 < 10 ? `0${workOut.breakTime % 60}` : workOut.breakTime % 60}
        .workOutBtns
            .editBtn
                i.fas.fa-edit
            .deleteBtn
                i.fas.fa-times
            .upBtn
                i.fas.fa-angle-up
            .downBtn
                i.fas.fa-angle-down
        form.edit_work-out
            input(type="text", name="name", value=workOut.name ,placeholder="이름", required=true)
            input(type="number", name="weight", value=workOut.weight ,placeholder="중량", min="0")
            select(name="repsOrHold")
                if workOut.repsOrHold === "reps"
                    option(value="reps", selected) 개수
                    option(value="hold") 버티기
                else
                    option(value="reps") 개수
                    option(value="hold", selected) 버티기
            input(type="number", name="count", value=workOut.count ,placeholder="횟수", required=true, min="0")
            input(type="number", name="set", value=workOut.set ,placeholder="세트", required=true, min="0")
            input(type="number", name="breakTime", value=workOut.breakTime ,placeholder="쉬는 시간", min="0")
            input(type="submit", value="수정하기")


