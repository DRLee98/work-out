include workOutBlock

mixin daysBlock(days = {})
    article.day-container
        each day in days
            if day.day === "mon"
                ul.mon.day#jsDay
                    .day-btn#jsDayBtn
                        i.fas.fa-minus
                    h3 월요일
                    each item in days.workOuts
                        +workOutBlock({
                            name: item.name,
                            weight: item.weight,
                            repsOrHold: item.repsOrHold,
                            count: item.count,
                            set: item.set,
                            breakTime: item.breakTime
                        })
            if day.day === "tue"
