mixin postImgList(isForm, images)
    .image-box
        .hide-block
            ul.post-img-list
                if isForm
                    input#postImg(type="file" name="images" multiple accept=".png, .jpg, .jepg")
                    li
                        label.post-img-block(for="postImg")
                            i.fas.fa-plus
                            span 이미지 추가하기
                if images
                    each imageUrl in images
                        li.post-img 
                            a(href=imageUrl, target="_blank")
                                img.post-img-block(src=imageUrl)

        button#post-img-right.right-btn.hide
            i.fas.fa-chevron-right
        button#post-img-left.left-btn.hide
            i.fas.fa-chevron-left