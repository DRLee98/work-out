include workOutBlock

mixin daysBlock(days = {})
    article.day-container
        ul.mon.day
            h3 월요일
            each day in days.days
                if day.day === "mon"
                    .dayBtns
                        span.editBtn
                            a(href=routes.editDay(day.id))
                                i.fas.fa-edit
                        span.expandBtn
                            i.fas.fa-minus
                    each item in day.workOuts
                        +workOutBlock({
                            name: item.name,
                            weight: item.weight,
                            repsOrHold: item.repsOrHold,
                            count: item.count,
                            set: item.set,
                            breakTime: item.breakTime,
                            id: item.id,
                            edit: days.edit
                        })
