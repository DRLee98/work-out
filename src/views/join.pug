extends layouts/main
include mixins/profileImg

block content
    .form-container
        form.user-form(method="post" enctype="multipart/form-data")
            .contents-box
                .image-box
                    input#profile(type="file", name="profile" accept=".png, .jpg, .jepg")
                    label(for="profile")
                        +profileImg()
                    span 프로필 이미지
                .input-box
                    input(type="name", name="name", placeholder="이름", required=true)
                    input(type="email", name="email", placeholder="이메일", required=true)
                    input(type="password", name="password", placeholder="비밀번호", required=true)
                    input(type="password", name="password2", placeholder="비밀번호 확인", required=true)
            if messages.error
                .errorMsg=messages.error
            input(type="submit", value="회원가입")