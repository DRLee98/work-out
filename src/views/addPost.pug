extends layouts/main
include mixins/postImgList

block content
    .post.post_form-container
        form.post-form(method="post" enctype="multipart/form-data")
            .contents-box
                input(type="text", name="title", placeholder="제목", required=true)
                textarea(name="contents", placeholder="내용", required=true)
            +postImgList(true)
            input(type="submit", value="게시글 만들기")